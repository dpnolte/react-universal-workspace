{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["es6", "es2015", "es2017", "dom"],
    "module": "esnext",
    "target": "es2016",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "babel.config.js"
  ],
  "include": ["src", "../../typings/**/*.d.ts"]
}
